@model ContractModel

<div class="col-md-6">
	<div class="row">
		<div class="col-md-6">
			<h2>Actual contracts</h2>
		</div>
		<div class="col-md-6">
			<div class="btn-container" onclick="location.href='@Url.Action("History", "History")'">
				<button type="submit" class="btn btn-primary">History</button>
			</div>
		</div>
	</div>

	@if (Model.OrderTitles != null && Model.OrderTitles.Any())
	{
		@foreach (var orderTitle in Model.OrderTitles)
		{
			<div class="row order-item" onclick="location.href='@Url.Action("Order", "Order", new { orderId = orderTitle.Id })'">
				<p>
					@orderTitle.OwnerName
					<span class="arrow">&rarr;</span>
					@orderTitle.CustomerName
				</p>
				<span class="type">@orderTitle.Type</span>
				<p>Created: @orderTitle.CreateDate</p>
			</div>
		}
	}
	else
	{
		<p>No orders available.</p>
	}
</div>

@section Styles {
	<link rel="stylesheet" href="~/css/backgroundBlock.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/history.css" asp-append-version="true" />
}
