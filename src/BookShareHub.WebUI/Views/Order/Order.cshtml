@model BookDto

<div class="row" style="height: 80vh;">
	<div class="col-md-6" style="height: 100%;">
		<div class="advertising-block">
			<h2 class="text-center">Book Details</h2>
			<hr>
			<div class="card-body">
				<h5 class="card-title">Title: @Model.Title</h5>
				<p class="card-text">Author: @Model.Author</p>
				<p class="card-text">Language: @Model.Language</p>
				<p class="card-text">Description: @Model.Description</p>
				<p class="card-text">Price: @Model.Price</p>
			</div>
		</div>
	</div>
	<div class="col-md-6" style="height: 100%;">
		<div class="advertising-block">
			<div class="text-center">
				<button type="submit" class="btn btn-primary">Order</button>
				<a href="@Url.Action("Library", "Library")" class="btn btn-secondary">Cancel</a>
			</div>
		</div>
	</div>
</div>

<style>
	.advertising-block {
		height: 100%;
		border-radius: 20px;
		background-color: #3498db;
		margin-bottom: 10px;
	}
</style>