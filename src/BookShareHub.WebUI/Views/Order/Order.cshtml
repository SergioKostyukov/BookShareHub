@model OrderModel

<div class="row" style="height: 90vh;">
	<div class="col-md-8" style="height: 100%;">
		<div class="advertising-block">
			<div class="title-block">
				<h5 class="card-title">Title: @Model.Book.Title</h5>
				<img src="@("~" + Model.Book.ImagePath)" asp-append-version="true" class="img-fluid" alt="Book Image">
			</div>
			<div class="card-body">
				<p class="card-text">Author: @Model.Book.Author</p>
				<p class="card-text">Language: @Model.Book.Language</p>
				<p class="card-text">Description: @Model.Book.Description</p>
				<p class="card-text">Price: @Model.Book.Price</p>
			</div>
		</div>
	</div>

	<div class="col-md-4" style="height: 100%;">
		<div class="advertising-block">
			<div class="nested-block" style="height: 25%;">
				<h5 class="text-center">Seller statistic</h5>
				<p class="card-text">Owner: @Model.Owner.UserName</p>
				<p class="card-text">
					Rating:
					@if (Model.Owner.Rating != null)
					{
						@for (int i = 0; i < (int)Model.Owner.Rating; i++)
						{
							<span>&#9733;</span>
						}
					}
					else
					{
						<p>no rating</p>
					}
				</p>
				<div class="btn-container">
					<button type="submit" class="btn btn-primary">Write message</button>
				</div>
			</div>
			<div class="nested-block" style="height: 75%; margin-bottom: 10px">
				<h5 class="card-title">Delivery info</h5>
				<div class="btn-container">
					<button type="submit" class="btn btn-primary">Order</button>
				</div>
			</div>

		</div>
	</div>
</div>

@section Styles {
	<link rel="stylesheet" href="~/css/order.css" asp-append-version="true" />
}