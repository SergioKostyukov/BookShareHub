@model List<BookTitleDto>

<h2>Library</h2>

<div class="row">
	@foreach (var book in Model ?? Enumerable.Empty<BookTitleDto>())
	{
		<div class="col-md-3 mb-4">
			<div class="card" onclick="location.href='@Url.Action("Order", "Order", new { id = book.Id })'">
				<div class="card-body">
					<h5 class="card-title">Title: @book.Title</h5>
					<p class="card-text">Author: @book.Author</p>
				</div>
			</div>
		</div>
	}
</div>

<style>
	.card-link {
		color: inherit;
		text-decoration: none;
		cursor: pointer;
	}

	.card {
		background-color: #3498db;
		border-radius: 10px;
		transition: transform 0.3s ease;
	}

		.card:hover {
			transform: scale(1.05);
			cursor: pointer;
		}
</style>
