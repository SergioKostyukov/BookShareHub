@model ContractModel

<div class="col-md-6">
	<div class="row">
		<div class="col-md-6">
			<h2>@Localizer["Actual"]</h2>
		</div>
		<div class="col-md-6">
			<div class="btn-container">
				<button type="submit" class="btn btn-primary" onclick="location.href='@Url.Action("History", "History")'">@Localizer["History"]</button>
			</div>
		</div>
	</div>
	
	<h3>@Localizer["Confirmed to me"]</h3>
	@if (Model.OrdersToMeConfirmed != null && Model.OrdersToMeConfirmed.Any())
	{
		@foreach (var orderTitle in Model.OrdersToMeConfirmed)
		{
			<div class="row order-item" onclick="location.href='@Url.Action("ConfirmedOrder", "Order", new { orderId = orderTitle.Id })'">
				<p>
					@orderTitle.OwnerName
					<span class="arrow">&rarr;</span>
					@orderTitle.CustomerName
				</p>
				<span class="type">@orderTitle.Type</span>
				<p>@Localizer["Created"]: @orderTitle.CreateDate</p>
			</div>
		}
	}
	else
	{
		<p>@Localizer["No available"]</p>
	}

	<h3>@Localizer["Confirmed by me"]</h3>
	@if (Model.OrdersByMeConfirmed != null && Model.OrdersByMeConfirmed.Any())
	{
		@foreach (var orderTitle in Model.OrdersByMeConfirmed)
		{
			<div class="row order-item" onclick="location.href='@Url.Action("ConfirmedOrder", "Order", new { orderId = orderTitle.Id })'">
				<p>
					@orderTitle.OwnerName
					<span class="arrow">&rarr;</span>
					@orderTitle.CustomerName
				</p>
				<span class="type">@orderTitle.Type</span>
				<p>@Localizer["Created"]: @orderTitle.CreateDate</p>
			</div>
		}
	}
	else
	{
		<p>@Localizer["No available"]</p>
	}

	<h3>@Localizer["Wish list"]</h3>
	@if (Model.OrdersTemplated != null && Model.OrdersTemplated.Any())
	{
		@foreach (var orderTitle in Model.OrdersTemplated)
		{
			<div class="row order-item" onclick="location.href='@Url.Action("Order", "Order", new { orderId = orderTitle.Id })'">
				<p>
					@orderTitle.OwnerName
					<span class="arrow">&rarr;</span>
					@orderTitle.CustomerName
				</p>
				<span class="type">@orderTitle.Type</span>
				<p>@Localizer["Created"]: @orderTitle.CreateDate</p>
			</div>
		}
	}
	else
	{
		<p>@Localizer["No available"]</p>
	}
</div>

@section Styles {
	<link rel="stylesheet" href="~/css/backgroundBlock.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/history.css" asp-append-version="true" />
}
