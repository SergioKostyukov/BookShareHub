@model BookDto

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card">
				<div class="card-body">
					<h2 class="text-center">Book Details</h2>
					<hr>
					<form asp-controller="Book" asp-action="EditBook" method="post" autocomplete="off">
						<input type="hidden" asp-for="Id" />
						<div class="form-group">
							<label asp-for="Title" class="control-label"></label>
							<input asp-for="Title" class="form-control" />
						</div>
						<div class="form-group">
							<label asp-for="Author" class="control-label"></label>
							<input asp-for="Author" class="form-control" />
						</div>
						<div class="form-group">
							<label asp-for="Language" class="control-label"></label>
							<input asp-for="Language" class="form-control" />
						</div>
						<div class="form-group">
							<label asp-for="Description" class="control-label"></label>
							<textarea asp-for="Description" class="form-control" rows="4"></textarea>
						</div>
						<div class="form-group">
							<label asp-for="Price" class="control-label"></label>
							<input asp-for="Price" class="form-control" />
						</div>
						<div class="text-center">
							<button type="submit" class="btn btn-primary">Save</button>
							<a href="@Url.Action("MyBooks", "MyBooks")" class="btn btn-secondary">Cancel</a>
						</div>
					</form>
					<form asp-controller="Book" asp-action="DeleteBook" method="post" autocomplete="off">
						<input type="hidden" asp-for="Id" />
						<div class="text-center">
							<button type="submit" class="btn btn-danger" id="btnDelete">Delete</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>