@model BookModel
@using BookShareHub.Core.Domain.Enums

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card">
				<div class="card-body">
					<h2 class="text-center">Add New Book</h2>
					<hr>
					<form asp-controller="Book" asp-action="AddBook" method="post" autocomplete="off" enctype="multipart/form-data">
						<div class="form-group">
							<label asp-for="Book.Title" class="control-label"></label>
							<input asp-for="Book.Title" class="form-control" />
						</div>
						<div>
							<label asp-for="Book.Author" class="control-label"></label>
							<input asp-for="Book.Author" class="form-control" />
						</div>
						<div class="form-group">
							<label asp-for="Book.Language" class="control-label"></label>
							<select asp-for="Book.Language" class="form-control">
								@foreach (var language in Enum.GetValues(typeof(BookLanguage)))
								{
									<option value="@language">@language</option>
								}
							</select>
						</div>
						<div class="form-group">
							<label asp-for="Book.Description" class="control-label"></label>
							<textarea asp-for="Book.Description" class="form-control" rows="4"></textarea>
						</div>
						<div class="form-group">
							<label asp-for="Book.Price" class="control-label"></label>
							<input asp-for="Book.Price" class="form-control" />
						</div>
						<div class="form-group">
							<label asp-for="ImageFile" class="control-label">Image</label>
							<input asp-for="ImageFile" class="form-control" , accept="image/*" />
							<span asp-validation-for="ImageFile" class="text-danger"></span>
						</div>
						<input type="hidden" asp-for="Book.OwnerId" />
						<input type="hidden" asp-for="Book.Id" />
						<div class="text-center">
							<button type="submit" class="btn btn-primary">Submit</button>
							<a href="@Url.Action("MyBooks", "MyBooks")" class="btn btn-secondary">Cancel</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Styles {
	<link rel="stylesheet" href="~/css/book.css" />
}